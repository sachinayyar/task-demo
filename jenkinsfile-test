pipeline {
    agent {
        kubernetes{
            label 'java21'
            defaultContainer 'jnlp'
        }
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-cred')  // Jenkins stored Docker Hub creds
        IMAGE_NAME = 'ayyarsachin/simpleproj'
    }
    stages {
        stage('checkout') {
            steps {
                checkout scm
            }
        }         
        stage('Maven Build') {
            steps {
            sh '''
                mvn -version
                mvn clean install
            '''
            }
        }
        stage('Build Image') {
            steps {
                sh '''
                buildah --version
                buildah --storage-driver=vfs bud -t ${IMAGE_NAME}:${BUILD_NUMBER} .

                '''
            }
        }

        stage('Login and Push Image') {
            steps {
                sh '''
                echo $DOCKERHUB_CREDENTIALS_PSW | buildah login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin docker.io
                buildah push --storage-driver=vfs ${IMAGE_NAME}:${BUILD_NUMBER} docker://docker.io/${IMAGE_NAME}:${BUILD_NUMBER}
                '''
            }
        }
    }
}
